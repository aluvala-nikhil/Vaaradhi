<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ff9900"
    tools:context=".SelectWorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaaradhi"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center_horizontal"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:id="@+id/TvWorker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of workers alloted to this work"
            android:textSize="10dp"/>

        <EditText
            android:id="@+id/rtAllot"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Number"
            android:layout_marginTop="5dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAllotworkers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:text="Allot workers"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>