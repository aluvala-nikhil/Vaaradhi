<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#ff9900"
    tools:context=".AddWorkActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="25dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vaaradhi"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:gravity="center_horizontal"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Work Details"
            android:textSize="30sp"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:gravity="center_horizontal"
            android:layout_marginVertical="16dp"/>


        <EditText
            android:id="@+id/rtwid"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Workid"
            android:layout_marginTop="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rtName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Enter Your Name"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Location of work"
            android:layout_marginTop="12dp"
            android:entries="@array/Location"/>

        <Spinner
            android:id="@+id/spinnerWorkType"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Work Type"
            android:layout_marginTop="12dp"
            android:entries="@array/WorkType"/>


        <EditText
            android:id="@+id/rtnw"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Number of workers required"
            android:layout_marginTop="12dp"
            android:inputType="number"/>


        <Button
            android:id="@+id/btnWorkDt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Add Work"/>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>